<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.example.anna.eduback2.views.Mains.MainActivityStudent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">


        <ImageView
            android:src="@mipmap/edubackicon"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginBottom="13dp"
            android:id="@+id/imageView" />

        <TextView
            android:text="Professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Prof_addsubject"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:id="@+id/textView4"
            android:textSize="36sp" />


        <Button
            android:id="@+id/GoToSubjectViewButton"
            android:layout_width="206dp"
            android:layout_height="31dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:text="MY SUBJECTS"
            android:textColor="#fff"
            android:textColorHint="#fff"

            android:textSize="15sp" />

        <Button
            android:id="@+id/Professor_goals"
            android:layout_width="206dp"
            android:layout_height="31dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:text="GOALS"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="15sp" />

        <Button
            android:text="Schedule"
            android:onClick="schedule"
            android:id="@+id/Professor_schedule"
            android:layout_width="206dp"
            android:layout_height="31dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@drawable/button_background"/>

        <Button
            android:text="Settings"
            android:id="@+id/Professor_settings"
            android:layout_width="206dp"
            android:layout_height="31dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/LogoffbuttonProfessor"
            android:layout_width="206dp"
            android:layout_height="31dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:text="Log off "
            android:textColor="#fff"
            android:textColorHint="#fff"

            android:textSize="15sp" />


    </LinearLayout>
</RelativeLayout>
