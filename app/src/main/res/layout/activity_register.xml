<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_firebase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.anna.eduback2.views.Login.RegisterActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:src="@mipmap/edubackicon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="13dp"
            android:id="@+id/imageView" />

        <TextView
            android:text="             User Register"
            android:id="@+id/editTextUserRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#213664"
            android:textColorHint="#213664"
            android:padding="14dp"
            android:fontFamily="sans-serif-condensed" />
        />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:padding="14dp"
            android:inputType="text"
            android:layout_marginTop="15dp"
            android:background="#3F9FC9"
            android:hint="       Enter Your Email"
            android:drawableLeft="@mipmap/ic_email2"
            android:drawableStart="@mipmap/ic_email2"
            />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:padding="14dp"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:background="#3F9FC9"
            android:hint=" Enter Your PassWord"
            android:drawableLeft="@mipmap/ic_locksymbol"
            android:drawableStart="@mipmap/ic_locksymbol"/>

        <EditText
            android:id="@+id/editTextReEnterPassWord"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:padding="14dp"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:background="#3F9FC9"
            android:hint=" ReEnter Your Password"
            android:drawableLeft="@mipmap/ic_locksymbol"
            android:drawableStart="@mipmap/ic_locksymbol"
            />


        <Button
            android:id="@+id/buttonRegister"
            android:text="Register User"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="@drawable/button_background" />

        <TextView
            android:text="Already Registered? Sign in here"
            android:textAlignment="center"
            android:id="@+id/textViewSignIn"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

</RelativeLayout>
