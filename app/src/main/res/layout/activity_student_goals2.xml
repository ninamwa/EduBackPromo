<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_professor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context="com.example.bruker.edubackpromo.views.Stats.TasksActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">



        <android.support.v7.widget.RecyclerView
            android:id="@+id/task_list"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:cacheColorHint="@color/colorAccent"
            />


        <EditText
            android:id="@+id/add_task_box"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:padding="14dp"
            android:inputType="text"
            android:layout_marginTop="15dp"
            android:background="#3F9FC9"
            android:hint=" ENTER YOUR NEW TASK"/>


        <Button
            android:id="@+id/add_task_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:text="Add task"
            android:textColorHint="#fff"
            android:drawableLeft="@mipmap/ic_addsubject4"
            android:drawableStart="@mipmap/ic_addsubject4"
            android:background="@drawable/button_background" />
    </LinearLayout>

</LinearLayout>