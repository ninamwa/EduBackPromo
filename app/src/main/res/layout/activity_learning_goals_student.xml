<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bruker.edubackpromo.views.Stats.LearningGoalsStudentActivity2">

    <TextView
        android:text="Learning Goals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textViewLearningGoal" />

    <ExpandableListView
        android:id="@+id/expListViewStudent"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/bAttendance"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Register attendance"
        android:background="@drawable/button_background"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/bFeedback"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Register feedback"
        android:background="@drawable/button_background"/>

</LinearLayout>