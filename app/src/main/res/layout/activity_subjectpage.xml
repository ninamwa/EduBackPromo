<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fagside2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anna.eduback2.views.Subject.SubjectPageActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="time" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/fagNavnTextView"
            android:textStyle="normal|bold"
            android:textSize="40sp"
            android:layout_weight="0.17"
            android:textColor="#000000"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eksamensdatoTextView"
            android:layout_weight="0.05"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LÃ¦rerTextView"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_weight="0.05" />

        <Button
            android:id="@+id/ButtonGoToWeekList"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="Week of Lecture"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonDIV"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="MY GOALS"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textStyle="bold" />


        <Button
            android:id="@+id/ButtonAddLectureTime"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="ADD TIMES FOR LECTURE"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
