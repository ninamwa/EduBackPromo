<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_professor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context="com.example.bruker.edubackpromo.views.Mains.MainActivityProfessor"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">




        <ImageView
            android:src="@mipmap/edubackicon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="13dp"
            android:id="@+id/imageView" />

        <ListView
            android:id="@+id/FagListView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:cacheColorHint="@color/colorAccent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/button_background"/>

        <EditText
            android:id="@+id/InsertFag"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:padding="14dp"
            android:inputType="text"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent"
            android:drawableLeft="@mipmap/ic_addsubject3"
            android:drawableStart="@mipmap/ic_addsubject3"
            tools:hint="    TYPE INN SUBJECT CODE." />

        <Button
            android:text="Add a new subject"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/AddFagButton"
            android:drawableLeft="@mipmap/ic_addsubject4"
            android:drawableStart="@mipmap/ic_addsubject4"
            android:background="@drawable/button_background"/>


    </LinearLayout>

</LinearLayout>





